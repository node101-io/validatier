                          .each-table-popup-info-content(class='center')= header.popup_text
                          .each-tooltip-info-hover(style='margin-bottom: -1px')
                            img(src='/res/images/info.svg')
                      div= header.name
                    .each-table-header-sort-indicators 
                      .triangle-up
                      .triangle-down
            script.
              function updateSummary() {
                document.querySelectorAll('.metric-total-delegation-native').forEach(each => each.innerText = getValue(totalDelegation, `#{selectedChain.symbol}`));
                document.querySelectorAll('.metric-total-withdraw-native').forEach(each => each.innerText = getValue(totalWithdrawn, `#{selectedChain.symbol}`));
                document.querySelectorAll('.metric-total-sold-amount-native').forEach(each => each.innerText = getValue(totalWithdrawnValidator - totalSelfStaked, `#{selectedChain.symbol}`));

                document.querySelectorAll('.metric-total-delegation-usd').forEach(each => each.innerText = getValue(totalDelegation, `usd`));
                document.querySelectorAll('.metric-total-withdraw-usd').forEach(each => each.innerText = getValue(totalWithdrawn, `usd`));
                document.querySelectorAll('.metric-total-sold-amount-usd').forEach(each => each.innerText = getValue(totalWithdrawnValidator - totalSelfStaked, `usd`));

                const percentageSold = (((totalWithdrawnValidator - totalSelfStaked) / totalWithdrawnValidator) * 100).toFixed(1);
                document.querySelectorAll('.summary-percentage-sold-native').forEach(each => {
                  each.innerText = percentageSold + '%';
                  if (each.parentNode.classList.contains('percentage-sold-main-circle')) {
                    each.previousSibling.innerText = (100 - percentageSold).toFixed(1) + '%';
                    each.style.width = `calc(var(--percentage-sold-main-circle-diameter) * ${Math.sqrt(percentageSold / 100)})`
                  }
                });

                document.querySelectorAll('.summary-self-stake-amount-native').forEach(each => each.innerText = getValue(totalSelfStaked, `#{selectedChain.symbol}`));
                document.querySelectorAll('.summary-self-stake-amount-usd').forEach(each => each.innerText = getValue(totalSelfStaked, `usd`));
                document.querySelectorAll('.summary-average-self-stake-ratio-native').forEach(each => each.innerText = (totalSelfStakeRatio / numberOfValidatorsVisited).toFixed(0) + '%');
              }
            each validator, index in validators
              script.
                totalDelegation += #{validator.total_stake};
                totalWithdrawn += #{validator.total_withdraw};
                
                totalSelfStaked += #{validator.self_stake};
                totalWithdrawnValidator += (#{validator.reward} + #{validator.commission});
                totalSelfStakeRatio += Math.min(Math.abs((#{validator.self_stake || 0} / #{validator.total_stake || 1})), 1) * 100;
                numberOfValidatorsVisited++;
                updateSummary();
              .each-validator-wrapper(validator=validator id=`${validator.operator_address}` pubkey=`${validator.pubkey}` chain_identifier=`${validator.chain_identifier}` class='operator-address')
                .each-validator-info-wrapper
                  .ranking-number-content= index + 1
                  .validator-image
                    img.validator-image-content(src=`${validator.temporary_image_uri || '/res/images/default_validator_photo.png'}`)
                  .validator-textual-info-wrapper 
                    .validator-moniker 
