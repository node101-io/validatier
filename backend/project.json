{
  "name": "validatier-backend",
  "$schema": "../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "backend",
  "projectType": "application",
  "targets": {
    "build": {
      "executor": "nx:run-commands",
      "outputs": ["{projectRoot}/build"],
      "options": {
        "command": "tsc",
        "cwd": "backend"
      }
    },
    "dev": {
      "executor": "nx:run-commands",
      "options": {
        "command": "NODE_ENV=development nodemon --exec tsx app.ts",
        "cwd": "backend"
      }
    },
    "start": {
      "executor": "nx:run-commands",
      "dependsOn": ["build"],
      "options": {
        "command": "node build/app.js",
        "cwd": "backend"
      }
    },
    "test": {
      "executor": "nx:run-commands",
      "options": {
        "command": "vitest",
        "cwd": "backend"
      }
    },
    "save-cache": {
      "executor": "nx:run-commands",
      "options": {
        "command": "tsx utils/saveCacheForTesting.ts",
        "cwd": "backend"
      }
    },
    "clean": {
      "executor": "nx:run-commands",
      "options": {
        "command": "rm -rf build",
        "cwd": "backend"
      }
    }
  },
  "tags": ["type:app", "scope:backend"]
}
